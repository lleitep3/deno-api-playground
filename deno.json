{
  "tasks": {
    "start": "deno run -A src/main.ts",
    "dev": "deno run -A --watch src/main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@types/express": "npm:@types/express@^5.0.0",
    "@types/pino": "npm:@types/pino@^7.0.5",
    "@types/pino-http": "npm:@types/pino-http@^5.8.4",
    "express": "npm:express@4.21.1",
    "pino": "npm:pino@^9.5.0",
    "pino-http": "npm:pino-http@^10.3.0"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["./"],
    "exclude": [".vscode/**/*"]
  }
}
